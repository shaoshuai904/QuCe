<RelativeLayout android:id="@+id/rl_top_bar"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height"
                android:background="@color/top_bar_bg_color">

    <TextView
        android:id="@+id/tv_left_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_title_click_bg"
        android:drawableLeft="@drawable/ic_back"
        android:drawablePadding="1dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="LeftText"
        android:textColor="@color/selector_top_btn_text_color"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="标题"
        android:textColor="@color/top_bar_title_color"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_right_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_title_click_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="RightText"
        android:textColor="@color/selector_top_btn_text_color"
        android:textSize="15sp"
        android:textStyle="bold"/>

</RelativeLayout>